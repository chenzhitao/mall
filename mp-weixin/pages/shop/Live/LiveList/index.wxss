  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.live-tab__item-name {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.live-tab__item--link {
  width: 68rpx;
  height: 4rpx;
  background: transparent;
  border-radius: 2rpx;
}
.live-tab__item--active {
  width: 68rpx;
  height: 4rpx;
  background: #d5a65a;
  border-radius: 2rpx;
}
